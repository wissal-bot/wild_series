{# templates/category/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>Catégorie {{ category.name }}</h1>
    
    {% if programs|length > 0 %}
        <h2>Séries :</h2>
        <ul>
            {% for program in programs %}
                <li>
                    {{ program.id }} - {{ program.title }} - {{ program.synopsis }}
                    <a href="{{ path('show', {'id': program.id}) }}">Voir la fiche</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune série trouvée dans cette catégorie.</p>
    {% endif %}
    
    <a href="{{ path('category_index') }}">Retour à la liste des catégories</a>
{% endblock %}
